<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<smart:config xmlns:smart="https://platform.anakeen.com/4/schemas/smart/1.0" xmlns:workflow="https://platform.anakeen.com/4/schemas/workflow/1.0">
    <workflow:graph ns="{{VENDOR}}" name="{{properties.name}} label="{{properties.title}}">
        <workflow:steps>
        {{#steps}}
            <workflow:step name="{{name}}" {{#activity-label}}activity-label="{{activity-label}}"  {{/activity-label}}state-label="{{state-label}}"/>
        {{/steps}}
        </workflow:steps>
        <workflow:transitions>
         {{#transitions}}
             <workflow:transition name="{{name}}" from="{{from}}" to="{{to}}" label="{{label}}"/>
         {{/transitions}}
        </workflow:transitions>
    </workflow:graph>
</smart:config>