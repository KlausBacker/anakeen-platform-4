<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<smart:config xmlns:smart="https://platform.anakeen.com/4/schemas/smart/1.0">
    <smart:structure-configuration name="HUBCONFIGURATION" label="HubConfiguration">
        <smart:icon file="HubConfiguration.png"/>

        <smart:class>Anakeen\Hub\SmartStructures\HubConfiguration\HubConfigurationBehavior</smart:class>
        <smart:fields>
            <smart:field-set name="hub_config" type="tab" label="Configuration" access="ReadWrite">
                <smart:field-set name="hub_label_frame" type="frame" label="Label" access="ReadWrite">
                    <smart:field-set name="hub_titles" type="array" label="Element Titles"
                                     access="ReadWrite">
                        <smart:field-text name="hub_title" label="Title" access="ReadWrite"/>
                        <smart:field-text name="hub_language" label="Language"
                                          access="ReadWrite"/>
                        <smart:field-text name="hub_language_code" label="Language code" access="ReadWrite"/>
                    </smart:field-set>
                </smart:field-set>
                <smart:field-set name="hub_icon_frame" type="frame" label="Icon" access="ReadWrite">
                    <smart:field-enum name="hub_icon_enum" label="Mode" access="ReadWrite" relation="Icon_mode_enum"/>
                    <smart:field-enum name="hub_icon_font" label="Icon picker" access="ReadWrite" relation="Icon_font_enum"/>
                    <smart:field-image name="hub_icon_image" label="Image" access="ReadWrite"/>
                    <smart:field-htmltext name="hub_icon_text" label="Html icon" access="ReadWrite"/>
                </smart:field-set>
                <smart:field-set name="hub_slot_parameters" type="frame" access="ReadWrite" label="Element location">
                    <smart:field-int name="hub_order" label="Order in hub" access="ReadWrite"/>
                    <smart:field-enum name="hub_docker_position" label="Dock position" relation="Docker_pos_enum"
                                      access="ReadWrite"/>
                </smart:field-set>
                <smart:field-set name="hub_activated_frame" type="frame" label="Element activation" access="ReadWrite">
                    <smart:field-enum name="hub_activated" label="Element is activated" relation="Yes_no_enum"
                                      access="ReadWrite"/>
                    <smart:field-int name="hub_activated_order" label="Priority" access="ReadWrite"/>
                </smart:field-set>
            </smart:field-set>
            <smart:field-set name="hub_component_tab" type="tab" label="Element parameters" access="ReadWrite">
                <smart:field-set name="hub_component_parameters" type="frame" access="ReadWrite" label="Parameters"/>
            </smart:field-set>
            <smart:field-set name="hub_security" label="Security" type="tab" access="ReadWrite">
                <smart:field-set name="hub_security_frame" type="frame" access="ReadWrite">
                    <smart:field-set name="hub_roles" type="array" label="Roles" access="ReadWrite">
                        <smart:field-account name="hub_role" label="Role" access="ReadWrite">
                            <smart:field-option name="match">role</smart:field-option>
                        </smart:field-account>
                    </smart:field-set>
                </smart:field-set>
            </smart:field-set>
        </smart:fields>

        <smart:parameters>
            <smart:field-set name="hub_fr_assets" type="frame" label="Hub asset parameters" access="ReadWrite">
                <smart:field-set name="hub_jsassets" type="array" label="Javascript assets" access="ReadWrite">
                    <smart:field-text name="hub_jsasset" label="Javascript Url" access="ReadWrite"/>
                </smart:field-set>
                <smart:field-set name="hub_cssassets" type="array" label="CSS assets" access="ReadWrite">
                    <smart:field-text name="hub_cssasset" label="Css Url" access="ReadWrite"/>
                </smart:field-set>
            </smart:field-set>
        </smart:parameters>

        <smart:hooks>

        </smart:hooks>

        <smart:autocompletion>
            <smart:field-autocomplete field="hub_language">
                <smart:field-callable
                        function="Anakeen\Hub\SmartStructures\HubConfiguration\HubConfigurationAutocompletion\HubConfigurationAutocompletion::getLanguages"/>
                <smart:field-returns>
                    <smart:field-return field="hub_language"/>
                    <smart:field-return field="hub_language_code"/>
                </smart:field-returns>
            </smart:field-autocomplete>
        </smart:autocompletion>

        <smart:defaults>
            <smart:default field="hub_activated">TRUE</smart:default>
            <smart:default field="hub_docker_position" reset="true">LEFTTOP</smart:default>
            <smart:default field="hub_icon_enum" reset="true">FONT</smart:default>
        </smart:defaults>

    </smart:structure-configuration>

    <smart:enumerates>
        <smart:enum-configuration name="Icon_mode_enum">
            <smart:enum name="FONT" label="Font"/>
            <smart:enum name="IMAGE" label="Image"/>
            <smart:enum name="HTML" label="Html"/>
        </smart:enum-configuration>
        <smart:enum-configuration name="Yes_no_enum">
            <smart:enum name="TRUE" label="Yes"/>
            <smart:enum name="FALSE" label="No"/>
        </smart:enum-configuration>
        <smart:enum-configuration name="Docker_pos_enum">
            <smart:enum name="TOPLEFT" label="Top Left"/>
            <smart:enum name="TOPCENTER" label="Top Center"/>
            <smart:enum name="TOPRIGHT" label="Top Right"/>
            <smart:enum name="BOTTOMLEFT" label="Bottom Left"/>
            <smart:enum name="BOTTOMCENTER" label="Bottom Center"/>
            <smart:enum name="BOTTOMRIGHT" label="Bottom Right"/>
            <smart:enum name="LEFTTOP" label="Left Top"/>
            <smart:enum name="LEFTCENTER" label="Left Center"/>
            <smart:enum name="LEFTBOTTOM" label="Left Bottom"/>
            <smart:enum name="RIGHTTOP" label="Right Top"/>
            <smart:enum name="RIGHTCENTER" label="Right Center"/>
            <smart:enum name="RIGHTBOTTOM" label="Right Bottom"/>
        </smart:enum-configuration>
        <smart:enum-configuration name="Icon_font_enum">

        </smart:enum-configuration>
    </smart:enumerates>
</smart:config>