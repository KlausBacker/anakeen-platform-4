<?xml version="1.0" encoding="UTF-8"?>
<smart:config xmlns:smart="http://www.anakeen.com/ns/smart/1.0">
    <smart:access-configuration name="PRF_ADMIN_EDIT" label="Administration" profil-type="PDOC">
        <smart:description>View for all. Modify only for administrators.</smart:description>
        <smart:element-access access="view" login="all"/>
        <smart:element-access access="edit" login="gadmin"/>
    </smart:access-configuration>
    <smart:access-configuration name="PRF_ADMIN_CREATION" label="CrÃ©ation administrateur" profil-type="PFAM">
        <smart:description>Can be create only by administrators.</smart:description>
        <smart:element-access access="view" login="all"/>
        <smart:element-access access="create" login="gadmin"/>
        <smart:element-access access="icreate" login="gadmin"/>
    </smart:access-configuration>
    <smart:access-configuration name="PRF_IUSER_OWNER" label="User itself" profil-type="PDOC" linked-structure="IUSER">
        <smart:description>User can modify its own information</smart:description>
        <smart:element-access access="view" login="gadmin" field="us_meid"/>
        <smart:element-access access="edit" login="gadmin" field="us_meid"/>
        <smart:element-access access="delete" login="gadmin"/>
        <smart:element-access access="send" login="all"/>
    </smart:access-configuration>

    <smart:access-configuration name="CV_IUSER_ACCOUNT" label="CV DOC IUSER" profil-type="CVDOC" linked-structure="IUSER">
        <smart:element-access access="view" login="all"/>
        <smart:element-access access="modifyacl" login="gadmin"/>
        <smart:element-access access="viewacl" login="gadmin"/>
        <smart:element-access access="EUSER" login="gadmin"/>
        <smart:element-access access="EGROUP" login="gadmin"/>
    </smart:access-configuration>

    <smart:access-configuration name="PRF_ADMIN_DIR" label="Modification administrateur" profil-type="PDIR">
        <smart:description>Folder can be update by administrators.</smart:description>
        <smart:element-access access="view" login="all"/>
        <smart:element-access access="open" login="all"/>
        <smart:element-access access="delete" login="gadmin"/>
        <smart:element-access access="edit" login="gadmin"/>
        <smart:element-access access="modify" login="gadmin"/>
    </smart:access-configuration>

    <smart:access-configuration name="GDEFAULT" link="PRF_ADMIN_DIR"/>
    <smart:access-configuration name="GADMIN" link="PRF_ADMIN_DIR"/>
    <smart:access-configuration name="FLD_ACCOUNTS" link="PRF_ADMIN_DIR"/>
    <smart:access-configuration name="USER_ADMIN" link="PRF_ADMIN_EDIT"/>
    <smart:access-configuration name="USER_GUEST" link="PRF_ADMIN_EDIT"/>
</smart:config>
