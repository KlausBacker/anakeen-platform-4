<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<smart:config xmlns:smart="https://platform.anakeen.com/4/schemas/smart/1.0">
    <smart:structure-configuration name="HubConfiguration">
        <smart:icon file="HubConfiguration.png"/>

        <smart:class>\Anakeen\SmartStructures\HubConfiguration\HubConfigurationSmartStructure</smart:class>

        <smart:fields>
            <smart:field-set name="hub_config" type="frame" label="Hub configuration" access="ReadWrite">
                <smart:field-set name="hub_titles" type="array" label="Titles"
                                 access="ReadWrite">
                    <smart:field-text name="hub_title" label="Title" access="ReadWrite"/>
                    <smart:field-text name="hub_language" label="Language"
                                      access="ReadWrite"/>
                    <smart:field-text name="hub_language_code" access="ReadWrite"/>
                </smart:field-set>
                <smart:field-text name="hub_icon" label="Icon" access="ReadWrite"/>
                <smart:field-text name="hub_font_name" access="ReadWrite"/>
                <smart:field-text name="hub_icon_name" access="ReadWrite"/>
                <smart:field-set name="hub_roles" label="Roles" access="ReadWrite">
                    <smart:field-account name="hub_role" label="Role" access="ReadWrite">
                        <smart:field-option name="match">role</smart:field-option>
                    </smart:field-account>
                </smart:field-set>
                <smart:field-enum name="hub_mono_element" label="Mono element" relation="Yes_no_enum"
                                  access="ReadWrite"/>
                <smart:field-enum name="hub_activated" label="Element activated" relation="Yes_no_enum"
                                  access="ReadWrite"/>
                <smart:field-int name="hub_order" label="Order in hub" access="ReadWrite"/>
                <smart:field-text name="hub_id" label="Element id in the hub" access="ReadWrite"/>
            </smart:field-set>
        </smart:fields>


        <smart:parameters>
            <smart:field-set name="hub_fr_assets" type="frame" label="Hub asset parameters" access="ReadWrite">
                <smart:field-set name="hub_jsassets" type="array" label="Javascript assets" access="ReadWrite">
                    <smart:field-text name="hub_jsasset" label="Javascript Url" access="ReadWrite"/>
                </smart:field-set>
                <smart:field-set name="hub_cssassets" type="array" label="CSS assets" access="ReadWrite">
                    <smart:field-text name="hub_cssassets" label="Css Url" access="ReadWrite"/>
                </smart:field-set>
                <smart:field-enum name="hub_slot" label="Element in slot" relation="slot_enum" access="ReadWrite"/>
            </smart:field-set>
        </smart:parameters>

        <smart:hooks>

        </smart:hooks>

        <smart:autocompletion>
            <smart:field-autocomplete field="hub_language">
                <smart:field-callable function=""/> <!-- TODO Function -->
            </smart:field-autocomplete>
            <smart:field-autocomplete field="hub_icon">
                <smart:field-callable function=""/> <!-- TODO Function -->
            </smart:field-autocomplete>
        </smart:autocompletion>

        <smart:defaults>
            <smart:default field="hub_mono_element">FALSE</smart:default>
            <smart:default field="hub_activated">TRUE</smart:default>
            <smart:default field="hub_slot">FALSE</smart:default>
        </smart:defaults>

    </smart:structure-configuration>

    <smart:enumerates>
        <smart:enum-configuration name="Yes_no_enum">
            <smart:enum name="TRUE" label="Yes"/>
            <smart:enum name="FALSE" label="No"/>
        </smart:enum-configuration>
        <smart:enum-configuration name="slot_enum">
            <smart:enum name="FALSE" label="No"/>
            <smart:enum name="TOP" label="Top"/>
            <smart:enum name="BOTTOM" label="Bottom"/>
        </smart:enum-configuration>
    </smart:enumerates>
</smart:config>
