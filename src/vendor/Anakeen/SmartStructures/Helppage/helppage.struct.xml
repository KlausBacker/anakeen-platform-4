<?xml version="1.0" encoding="UTF-8"?>
<smart:config xmlns:smart="https://platform.anakeen.com/4/schemas/smart/1.0">
    <smart:structure-configuration name="HELPPAGE" label="Aide en ligne">
        <smart:class>Anakeen\SmartStructures\Helppage\HelpPageHooks</smart:class>
        <smart:usefor>S</smart:usefor>

        <smart:fields>
            <smart:field-set name="help_fr_identification" type="frame" label="Aide" access="ReadWrite">
                <smart:field-docid name="help_family" label="Structure" access="Read" is-abstract="true" relation="-1"/>
                <smart:field-set name="help_t_help" type="array" label="Description" access="ReadWrite">
                    <smart:field-text name="help_name" label="Libellé" access="ReadWrite"/>
                    <smart:field-enum name="help_lang" label="Langue du libellé" access="ReadWrite" relation="helppage-help_lang"/>
                    <smart:field-longtext name="help_description" label="Description" access="ReadWrite"/>
                </smart:field-set>
                <smart:field-set name="help_t_sections" type="array" label="Rubriques" access="ReadWrite">
                    <smart:field-int name="help_sec_order" label="Ordre de la rubrique" access="ReadWrite"/>
                    <smart:field-text name="help_sec_name" label="Nom de la rubrique" access="ReadWrite"/>
                    <smart:field-enum name="help_sec_lang" label="Langue" access="ReadWrite" relation="helppage-help_sec_lang"/>
                    <smart:field-text name="help_sec_key" label="Clé de la rubrique" access="ReadWrite"/>
                    <smart:field-htmltext name="help_sec_text" label="Texte" access="ReadWrite"/>
                </smart:field-set>
            </smart:field-set>
        </smart:fields>

        <smart:parameters>
            <smart:field-set name="help_fr_family" type="frame" label="Paramètres de famille" access="ReadWrite">
                <smart:field-set name="help_t_family" type="array" label="Langues" access="ReadWrite">
                    <smart:field-text name="help_p_lang_name" label="Libellé de la langue" access="ReadWrite"/>
                    <smart:field-text name="help_p_lang_key" label="Langue" access="ReadWrite"/>
                </smart:field-set>
            </smart:field-set>
        </smart:parameters>
    </smart:structure-configuration>
</smart:config>
