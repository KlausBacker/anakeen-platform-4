<?xml version="1.0" encoding="UTF-8"?>
<smart:config xmlns:smart="http://www.anakeen.com/ns/smart/v1/">
    <smart:structure-configuration name="SENTMESSAGE" label="Message envoyé">
        <smart:icon file="sentmessage.png"/>
        <smart:class>Anakeen\SmartStructures\Sentmessage\SentMessageHooks</smart:class>
        <smart:revisable>false</smart:revisable>
        <smart:usefor>S</smart:usefor>
        <smart:attributes>
            <smart:attr-fieldset name="emsg_fr_ident" type="frame" label="Identification" visibility="R">
                <smart:attr-docid name="emsg_refid" label="Document référence" visibility="R" relation="x"/>
                <smart:attr-text name="emsg_from" label="De" visibility="S"/>
                <smart:attr-fieldset name="emsg_t_recipient" type="array" label="Destinataires" visibility="U">
                    <smart:attr-enum name="emsg_sendtype" label="Type" visibility="S" relation="SENTMESSAGE-emsg_sendtype"/>
                    <smart:attr-text name="emsg_recipient" label="Destinataire" visibility="S"/>
                </smart:attr-fieldset>
                <smart:attr-text name="emsg_subject" label="Sujet" visibility="S" is-title="true"/>
                <smart:attr-timestamp name="emsg_date" label="Date" visibility="S"/>
                <smart:attr-int name="emsg_size" label="Taille" visibility="R"/>
            </smart:attr-fieldset>
            <smart:attr-fieldset name="emsg_fr_bodies" type="frame" label="Corps de messages" visibility="R">
                <smart:attr-longtext name="emsg_textbody" label="Texte" visibility="R"/>
                <smart:attr-file name="emsg_htmlbody" label="Texte formaté" visibility="R"/>
                <smart:attr-fieldset name="emsg_t_attach" type="array" label="Attachements" visibility="R">
                    <smart:attr-file name="emsg_attach" label="Fichier" visibility="R"/>
                </smart:attr-fieldset>
            </smart:attr-fieldset>
        </smart:attributes>
        <smart:parameters>
            <smart:attr-fieldset name="emsg_fr_parameters" type="frame" label="Paramètres" visibility="W">
                <smart:attr-enum name="emsg_editcontrol" label="Force la lecture seule" visibility="W" relation="SENTMESSAGE-emsg_editcontrol"/>
            </smart:attr-fieldset>
        </smart:parameters>
        <smart:autocompletion/>
        <smart:defaults/>
        <smart:accesses/>
    </smart:structure-configuration>
    <smart:enumerates>
        <smart:enum-configuration name="SENTMESSAGE-emsg_sendtype">
            <smart:enum name="to" label="Pour"/>
            <smart:enum name="cc" label="Copie"/>
            <smart:enum name="bcc" label="Copie cachée"/>
        </smart:enum-configuration>
    </smart:enumerates>
</smart:config>
