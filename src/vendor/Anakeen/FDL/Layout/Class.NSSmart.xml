class ADoc[docName] extends [AParent] {
    // Family : [title]

   function __construct () {
      [AParent]::__construct();


     [BLOCK MATTR]
     $this->attr["[attrid]"]=new \MenuAttribute("[attrid]", "[docid]","[label]",[order],"[link]","[visibility]","[precond]","[options]","[docName]");
     [ENDBLOCK MATTR]
