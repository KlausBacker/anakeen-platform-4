{
    "apps": {
        "CORE": {
            "shortName": "Core",
            "description": "System application",
            "version": "4.0.0"
        }
    },
    "accesses": {
        "core:admin": {
            "category": "System",
            "description": "Admin Access"
        }
    },
    "routes": {
        "Core:Root": {
            "priority": 0,
            "callable": "\\Anakeen\\App\\Core\\WelcomePage",
            "methods": [
                "get"
            ],
            "pattern": "/",
            "description": "Welcome Page",
            "requiredAccess": null
        },
        "Core:Welcome": {
            "priority": 1,
            "callable": "\\Anakeen\\App\\Core\\WelcomePage",
            "methods": [
                "get"
            ],
            "pattern": "/welcome",
            "description": "Welcome Page",
            "requiredAccess": null
        },
        "Core:LayoutAsset": {
            "priority": 1,
            "callable": "\\Anakeen\\Routes\\Core\\LayoutAsset",
            "methods": [
                "get"
            ],
            "pattern": "/assets/{asset}",
            "description": "Get css/js asset from Layout directory",
            "requiredAccess": null
        }
    }
}