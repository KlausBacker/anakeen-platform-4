<?xml version="1.0"?>
<router:config xmlns:router="http://www.anakeen.com/ns/routes/">
  <router:routes>
    <router:route name="Core:Authent:Session:Login">
      <router:priority>1</router:priority>
      <router:callable>\Anakeen\Routes\Authent\Session</router:callable>
      <router:method>POST</router:method>
      <router:pattern>/api/v2/authent/sessions/{login}</router:pattern>
      <router:description>Create user session</router:description>
      <router:requiredAccess/>
      <router:authenticated>false</router:authenticated>
    </router:route>
    <router:route name="Core:Authent:Session:Logout">
      <router:priority>1</router:priority>
      <router:callable>\Anakeen\Routes\Authent\Logout</router:callable>
      <router:method>DELETE</router:method>
      <router:pattern>/api/v2/authent/sessions/current</router:pattern>
      <router:description>Destroy current user session</router:description>
      <router:requiredAccess/>
      <router:authenticated>true</router:authenticated>
    </router:route>
  </router:routes>
</router:config>
