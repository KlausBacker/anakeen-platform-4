<?xml version="1.0"?>
<router:config xmlns:router="http://www.anakeen.com/ns/routes/">
  <router:apps>
    <router:app name="CORE">
      <router:shortName>Core</router:shortName>
      <router:description>System application</router:description>
      <router:version>4.0.0</router:version>
    </router:app>
  </router:apps>
  <router:routes>
    <router:route name="Core:Root">
      <router:priority>0</router:priority>
      <router:callable>\Anakeen\App\Core\WelcomePage</router:callable>
      <router:method>get</router:method>
      <router:pattern>/</router:pattern>
      <router:description>Welcome Page</router:description>
      <router:requiredAccess/>
    </router:route>
    <router:route name="Core:Welcome">
      <router:priority>1</router:priority>
      <router:callable>\Anakeen\App\Core\WelcomePage</router:callable>
      <router:method>get</router:method>
      <router:pattern>/welcome</router:pattern>
      <router:description>Welcome Page</router:description>
      <router:requiredAccess/>
    </router:route>
    <router:route name="Core:LayoutAsset">
      <router:priority>1</router:priority>
      <router:callable>\Anakeen\Routes\Core\LayoutAsset</router:callable>
      <router:method>get</router:method>
      <router:pattern>/assets/{asset}</router:pattern>
      <router:description>Get css/js asset from Layout directory</router:description>
      <router:requiredAccess/>
    </router:route>
  </router:routes>
  <router:accesses>
    <router:access name="core:admin">
      <router:category>System</router:category>
      <router:description>Admin Access</router:description>
    </router:access>
  </router:accesses>
</router:config>
