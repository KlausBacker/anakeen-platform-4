<form name="edit" style="height:230px;">
    <input type="hidden" name="id" value="[id]"/>

    <table align="center" border="0" cellspacing="0"
           cellpadding="2">

        <tr>
            <td valign="center" align="right"
                class="CORETblCell">
                <span class="CORETbl">[TEXT:name] :</span>
            </td>
            <td colspan="2" valign="center" align="left"
                class="CORETblCell">
                <span class="CORETbl">
                    <font size="-1">[name]</font>
                </span>
            </td>
        </tr>

        <tr>
            <td valign="center" align="right"
                class="CORETblCell">
                <span class="CORETbl">[TEXT:appmng:short_name]&nbsp;:</span>
            </td>
            <td colspan="2" valign="center" align="left"
                class="CORETblCell">
                <span class="CORETbl">
                    <font size="-1">[short_name]</font>
                </span>
            </td>
        </tr>

        <tr>
            <td valign="center" align="right"
                class="CORETblCell">
                <span class="CORETbl">[TEXT:appmng:description]&nbsp;:</span>
            </td>
            <td colspan="2" valign="center" align="left"
                class="CORETblCell">
                <span class="CORETbl">
                    <font size="-1">[description]</font>
                </span>
            </td>
        </tr>

        <tr>
            <td valign="center" align="right"
                class="CORETblCell">
                <span class="CORETbl">[TEXT:available]&nbsp;:</span>
            </td>
            <td colspan="2" valign="center" align="left"
                class="CORETblCell">
                <span class="CORETbl">
                    <input type="hidden" name="available"
                           value="[selected_available]"
                           id="input_available"/>
                    <button id="available" class="select"
                            data-menu="menuAvailable">
                        [selected_available]
                    </button>
                </span>
            </td>
        </tr>

        <tr>
            <td valign="center" align="right"
                class="CORETblCell">
                <span class="CORETbl">[TEXT:displayable]&nbsp;:</span>
            </td>
            <td colspan="2" valign="center" align="left"
                class="CORETblCell">
                <span class="CORETbl">
                    <input type="hidden" name="displayable"
                           value="[selected_displayable]"
                           id="input_displayable"/>
                    <button id="displayable" class="select"
                            data-menu="menuDisplayable">
                        [selected_displayable]
                    </button>
                </span>
            </td>
        </tr>
    </table>
    <ul id="menuAvailable" class="menuSelectable" data-button="available">
        [BLOCK SELECTAVAILABLE]
        <li>
            <a href="#">[available]</a>
        </li>
        [ENDBLOCK SELECTAVAILABLE]

    </ul>
    <ul id="menuDisplayable" class="menuSelectable"
        data-button="displayable">
        [BLOCK SELECTDISPLAYABLE]
        <li>
            <a href="#">[displayable]</a>
        </li>
        [ENDBLOCK SELECTDISPLAYABLE]

    </ul>
</form>
