<?xml version="1.0" ?>
<module xmlns="urn:dynacase:webinst:module/1.0"
        license="http://docs.anakeen.com/licenses/anakeen-3.0/license.html Anakeen License Agreement v3"
        name="@moduleName@" release="@release@" version="@version@"  vendor="Anakeen">
    <description>Security Package</description>
    <requires>
        <module name="user-interfaces"/>
    </requires>

    <pre-install>
    </pre-install>
    <post-install>

        <process command="./ank.php --script=importDocuments --file=./vendor/Anakeen/SmartStructures/Profiles/accountprofil.csv  --csv-enclosure='&quot;'">
            <label>Profiling accounts</label>
        </process>

        <process command="./ank.php --script=importDocuments --file=./vendor/Anakeen/SmartStructures/Profiles/cvdoc.profil.csv  --csv-enclosure='&quot;'">
            <label>Set view control for accounts</label>
        </process>
        <process command="./ank.php --script=importConfiguration --file=./vendor/Anakeen/SmartStructures/Helppage/helppage.profil.xml">
            <label>Profiling system families</label>
        </process>
        <process command="./ank.php --script=importDocuments --file=./vendor/Anakeen/SmartStructures/Dir/dir.profil.csv --csv-enclosure='&quot;'">
            <label>Profiling system families</label>
        </process>
        <process command="./ank.php --script=importConfiguration --file=./vendor/Anakeen/SmartStructures/Profiles/system-profil.xml">
            <label>Profiling system families</label>
        </process>
        <process command="./ank.php --script=importDocuments --file=./vendor/Anakeen/SmartStructures/Profiles/AuthentMailProfil.csv --csv-enclosure='&quot;'">
            <label>Profiling authent mail</label>
        </process>

        <process command="./ank.php --script=refreshUserAccount">
            <label>Update user account profile</label>
        </process>
        <process command="programs/update_catalog"/>
    </post-install>
    <post-upgrade>
        <process command="programs/update_catalog"/>
    </post-upgrade>
</module>
