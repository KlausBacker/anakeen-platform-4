<?xml version="1.0"?>
<module xmlns="https://platform.anakeen.com/4/schemas/app/1.0"
        name="development-center" version="2.0.1" vendor="Anakeen"
        license="http://www.gnu.org/licenses/lgpl-3.0.txt GNU Lesser General Public License v3.0">

    <description>Developement Center</description>

    <requires>
        <module name="user-interfaces" version="2.0.x"/>
        <module name="security" version="2.0.x"/>
        <module name="workflow" version="2.0.x"/>
        <module name="anakeen-hub" version="1.0.x"/>
    </requires>

    <parameters>
    </parameters>

    <post-install>
        <!-- import default configuration of admin center -->
        <process command="./ank.php --script=importDocuments --file=./vendor/Anakeen/DevelopmentCenter/Config/develConfiguration.xml"/>
    </post-install>

    <post-upgrade>
        <!-- import default configuration of admin center -->
        <process command="./ank.php --script=importDocuments --file=./vendor/Anakeen/DevelopmentCenter/Config/develConfiguration.xml"/>
    </post-upgrade>


</module>
