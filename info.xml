<?xml version="1.0" encoding="utf8"?>
<module xmlns="https://platform.anakeen.com/4/schemas/app/1.0"
        name="transformation" version="1.0.0" release="0"
        license="http://docs.anakeen.com/licenses/anakeen-3.0/license.html Anakeen License Agreement v3">
    <description >Transformation Engine Client Library</description>
  <requires>
    <module name="admin-center" />
  </requires>
  <replaces>
    <module name="anakeen-te" />
  </replaces>
  <post-install>
    <process command="programs/record_application TENGINE_CLIENT I">
      <label>Record application TENGINE_CLIENT in database</label>
    </process>
    <process command="programs/record_application TENGINE_MONITOR I">
      <label>Record application TENGINE monitoring</label>
    </process>
    <process command="programs/update_catalog"/>
  </post-install>
  <post-upgrade>
    <process command="programs/pre_migration TENGINE_CLIENT"/>
    <process command="programs/record_application TENGINE_CLIENT U">
      <label>Update application TENGINE_CLIENT in database</label>
    </process>
    <process command="programs/post_migration TENGINE_CLIENT"/>

    <process command="programs/record_application TENGINE_MONITOR U">
      <label>Update application TENGINE monitoring</label>
    </process>
    <process command="programs/update_catalog"/>
  </post-upgrade>
</module>
