        "mainOptions": {
            "common": {
                "showEmptyContent": "",
                "labelPosition": "left",
                "linkTitle": "",
                "linkTarget": "_self",
                "linkConfirm": false,
                "linkTextConfirm": ""
            },
            "account": {
                "noAccessText": "_(\"Account access deny\")"
            },
            "date": {
                "format": "_(\"Y-m-d\")"
            },
            "docid": {
                "noAccessText": "_(\"Information access deny\")"
            },
            "enum": {
                "boolColor": ""
            },
            "file": {
                "downloadInline": false
            },
            "image": {
                "downloadInline": false,
                "width": "80px"
            },
            "money": {
                "format": "%!.2n"
            },
            "text": {
                "format": "%s"
            },
            "time": {
                "format": "%H:%M"
            },
            "timestamp": {
                "format": "_(\"Y-m-d\") %H:%M"
            }
        },
        "js": ["lib/jquery/jquery.js"],
        "extraJs" : [],
        "css": ["css/dcp/system.css"],
        "extraCss" : [],

        "menu": {
            "menuClass": "Dcp\\Ui\\ViewMenuController",
            "configuration": {
                "modify": {
                    "type": "itemMenu",
                    "style": "",
                    "class": "",
                    "label": "_(\"Menu:Modify\")",
                    "url": "?app=DOCUMENT&action=VIEW&render=defaultEdit&id={{document.property.id}}",
                    "visibility": "\\Dcp\\Ui\\Menu::modifyAccessMenu()"
                },
                "delete": {
                    "type": "itemMenu",
                    "label": "_(\"Menu:Delete\")",
                    "url": "?app=...&id={{document.property.id}}",
                    "confirmText" : "{{document.property.title}} : _(\"Sure delete document ?\")",
                    "visibility": "\\Dcp\\Ui\\Menu::deleteAccessMenu()"
                },
                "restore": {
                    "type": "itemMenu",
                    "label": "_(\"Menu:Restore\")",
                    "url": "?app=...&id={{document.property.id}}",
                    "visibility": "\\Dcp\\Ui\\Menu::restoreAccessMenu()"
                },
                "history": {
                    "type": "itemMenu",
                    "label": "_(\"Menu:View History\")",
                    "url": "?app=...&id={{document.property.id}}",
                    "target": "_blank",
                    "visibility": "\\Dcp\\Ui\\Menu::historyAccessMenu()"
                },
                "transitions": {
                    "type": "listMenu",
                    "label": "_(\"Menu::Transitions\")",
                    "content": "\\Dcp\\Ui\\Menu::transitionMenu()"
                },
                "advanced": {
                    "label": "_(\"Menu::Advanced\")",
                    "type": "listMenu",
                    "content": {
                        "properties": {
                            "type": "itemMenu",
                            "label": "_(\"Menu:View Properties\")",
                            "url": "?app=...&id={{document.property.id}}",
                            "target": "_blank",
                            "visibility": "visible"
                        },
                        "security": {
                            "label": "_(\"Menu::Advanced\")",
                            "type": "listMenu",
                            "content": {
                                "profil": {
                                    "type": "itemMenu",
                                    "label": "_(\"Menu:Profil Access\")",
                                    "url": "?app=...&id={{document.property.id}}",
                                    "visibility": "\\Dcp\\Ui\\Menu::lockAccessMenu()"
                                },
                                "lock": {
                                    "type": "itemMenu",
                                    "label": "_(\"Menu:Lock\")",
                                    "url": "?app=...&id={{document.property.id}}",
                                    "visibility": "\\Dcp\\Ui\\Menu::lockAccessMenu()"
                                },
                                "unlock": {
                                    "type": "itemMenu",
                                    "label": "_(\"Menu:Unlock\")",
                                    "url": "?app=...&id={{document.property.id}}",
                                    "visibility": "\\Dcp\\Ui\\Menu::unlockAccessMenu()"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}