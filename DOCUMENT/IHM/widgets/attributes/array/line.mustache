<tr class="dcpArray__content__line" data-attrid="{{id}}" data-line="{{lineNumber}}">
    {{#tools}}
    <td class="dcpArray__content__toolCell">
        <span title="[[#i18n]]ddui:Drag to move line[[/i18n]]" class="dcpArray__content__toolCell__dragDrop">
            <button class="btn btn-default btn-xs"><span class="fa fa-ellipsis-v fa-2x"></span></button>
        </span>
        <span title="[[#i18n]]ddui:Select line[[/i18n]]" class="dcpArray__content__toolCell__check">
            <button class="btn btn-default btn-xs">
                <span class="fa-stack">
                    <span class="fa fa-circle-thin fa-stack-2x"></span>
                    <span class="fa fa-check fa-stack-1x" style="display : none;"></span>
                </span>
            </button>
        </span>
        <span title="[[#i18n]]ddui:Delete line[[/i18n]]" class="dcpArray__content__toolCell__delete">
            <button class="btn btn-default btn-xs">
                <span class="fa fa-trash-o fa-2x"></span>
            </button>
        </span>
    </td>
    {{/tools}}
{{#content}}
    <td class="dcpAttribute__content dcpAttribute__content--{{type}} dcpArray__content__cell dcpArray__content__cell--{{type}}" data-attrid="{{id}}"></td>
{{/content}}
</tr>