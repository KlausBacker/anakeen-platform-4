<div class="panel-body dcpArray__wrapper" data-attrid="{{id}}">
    <div class="table-responsive">
        <table class="table table-condensed table-bordered dcpArray__wrapper">
            <thead>
            <tr class="dcpArray__head">
                {{#tools}}
                <td class="dcpArray__head__toolCell"></td>
                {{/tools}}
                {{#content}}
                    <td class="dcpArray__head__cell dcpArray__head__cell--{{type}}" data-attrid="{{id}}">{{label}}</td>
                {{/content}}
            </tr>
            </thead>
            <tbody class="dcpArray__body">

            </tbody>
        </table>
        <div class="dcpArray__tools">
        {{#tools}}
            <button type="button" title="[[#i18n]]ddui:Add new row[[/i18n]]" class="btn btn-default dcpArray__add">
                <span class="glyphicon glyphicon-plus-sign"></span>
            </button>
            <button disabled="disabled" type="button" title="[[#i18n]]ddui:Duplicate selected row[[/i18n]]"  class="btn btn-default dcpArray__copy">
                <span class="glyphicon glyphicon-sound-dolby"></span>
            </button>
        {{/tools}}
        </div>
    </div>
</div>