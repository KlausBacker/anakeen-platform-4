{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "es5",
    "importHelpers": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "types": ["node", "jquery"],
    "strictNullChecks": false,
    "sourceMap": true,
    "lib": ["dom", "esnext", "es6"]
  },
  "include": [
    "./components/src/**/*.vue",
    "./components/src/**/*.ts"
  ],
  "files": [
    "./vue-shims.d.ts",
    "./vue-type-shims.d.ts",
    "./template-shims.d.ts"
  ]
}