<?xml version="1.0"?>
<router:config xmlns:router="http://www.anakeen.com/ns/routes/">
    <router:routes>
        <router:route name="Ui:Authent:Login">
            <router:priority>1</router:priority>
            <router:callable>\Anakeen\Components\Authent\Routes\LoginPage</router:callable>
            <router:method>GET</router:method>
            <router:pattern>/login/</router:pattern>
            <router:description>Login page</router:description>
            <router:requiredAccess/>
            <router:authenticated>false</router:authenticated>
        </router:route>
        <router:route name="Ui:Authent:MailPassword">
            <router:priority>1</router:priority>
            <router:callable>\Anakeen\Components\Authent\Routes\MailPassword</router:callable>
            <router:method>POST</router:method>
            <router:pattern>/api/v2/authent/mailPassword/{userId}</router:pattern>
            <router:description>Send email to change password</router:description>
            <router:requiredAccess/>
            <router:authenticated>false</router:authenticated>
        </router:route>
        <router:route name="Ui:Authent:Password">
            <router:priority>1</router:priority>
            <router:callable>\Anakeen\Components\Authent\Routes\Password</router:callable>
            <router:method>PUT</router:method>
            <router:pattern>/api/v2/authent/password/{login}</router:pattern>
            <router:description>Change password</router:description>
            <router:requiredAccess/>
            <router:authenticated>true</router:authenticated>
        </router:route>
    </router:routes>
    <router:parameters>
        <router:parameter name="AUTHENT_MAILASKPWD">
            <router:value>AUTH_TPLMAILASKPWD</router:value>
            <router:description>Mail template document reference to ask new password</router:description>
            <router:access>admin</router:access>
            <router:category>Authent</router:category>
        </router:parameter>
    </router:parameters>
</router:config>
