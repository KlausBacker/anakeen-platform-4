<?xml version="1.0"?>
<sde:config xmlns:sde="http://www.anakeen.com/ns/sde/1.0">
  <sde:routes namespace="Ui:Component">
    <sde:route name="Identity:Email">
      <sde:callable>\Anakeen\Components\Identity\Routes\Email</sde:callable>
      <sde:method>PUT</sde:method>
      <sde:pattern>/components/identity/email</sde:pattern>
      <sde:description>Modify user's email</sde:description>
      <sde:requiredAccess/>
      <sde:authenticated>true</sde:authenticated>
    </sde:route>
    <sde:route name="Identity:Password">
      <sde:callable>\Anakeen\Components\Identity\Routes\Password</sde:callable>
      <sde:method>PUT</sde:method>
      <sde:pattern>/components/identity/password</sde:pattern>
      <sde:description>Modify user's password</sde:description>
      <sde:requiredAccess/>
      <sde:authenticated>true</sde:authenticated>
    </sde:route>
  </sde:routes>
</sde:config>
