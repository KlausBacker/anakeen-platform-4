<?xml version="1.0" encoding="UTF-8"?>
<module xmlns="https://platform.anakeen.com/4/schemas/app/1.0" vendor="Anakeen" license="http://www.gnu.org/licenses/lgpl-3.0.txt GNU Lesser General Public License v3.0" name="admin-center" version="2.1.2-RC.2020.1.8">
    <description>Admin Center</description>

    <requires>
        <module name="user-interfaces" version="^3.0.2-RC.2020.1.8"/>
        <module name="anakeen-hub" version="^1.0.4-RC.2020.1.8"/>
    </requires>
    <post-install>
        <process command="./ank.php --script=importConfiguration --file=./vendor/Anakeen/AdminCenter/Accounts/110-AdminCenterRoles.xml"/>
        <process command="./ank.php --script=importConfiguration --file=./vendor/Anakeen/AdminCenter/Accounts/111-AdminManagerProfile.xml"/>
        <!-- import default configuration of admin center -->
        <process command="./ank.php --script=importConfiguration --file=./vendor/Anakeen/AdminCenter/Config/hubConfiguration.xml"/>
        <process command="./ank.php --script=manageGridControllers --cmd=register --file=./vendor/Anakeen/Routes/Admin/Trash/trash-grid-controller.xml"/>
    </post-install>
    <post-upgrade>
        <process command="./ank.php --script=importConfiguration --file=./vendor/Anakeen/AdminCenter/Accounts/110-AdminCenterRoles.xml"/>
        <process command="./ank.php --script=importConfiguration --file=./vendor/Anakeen/AdminCenter/Accounts/111-AdminManagerProfile.xml"/>

        <process command="./ank.php --script=importConfiguration --file=./vendor/Anakeen/AdminCenter/Config/hubConfiguration.xml"/>
        <process command="./ank.php --script=manageGridControllers --cmd=register --file=./vendor/Anakeen/Routes/Admin/Trash/trash-grid-controller.xml"/>
        <process command="./ank.php --script=migrateAdminPlugins"/>
    </post-upgrade>
</module>
