<accounts:accounts xmlns:accounts="https://platform.anakeen.com/4/schemas/account/1.0">
    <accounts:roles>

        <accounts:role name="system_administrator">
            <accounts:displayName>System administrator</accounts:displayName>
            <accounts:structure name="AC_SYSADMIN"/>
        </accounts:role>


        <accounts:role name="functional_administrator">
            <accounts:displayName>Functional administrator</accounts:displayName>
            <accounts:structure name="AC_FUNCADMIN"/>
        </accounts:role>

        <accounts:role name="accounts_manager_role">
            <accounts:displayName>Accounts Manager</accounts:displayName>
            <accounts:structure name="AC_ACCOUNTSMANAGER"/>
        </accounts:role>

        <accounts:role name="parameters_manager_role">
            <accounts:displayName>Parameters Manager</accounts:displayName>
            <accounts:structure name="AC_PARAMETERSMANAGER"/>
        </accounts:role>

        <accounts:role name="tokens_manager_role">
            <accounts:displayName>Tokens Manager</accounts:displayName>
            <accounts:structure name="AC_TOKENSMANAGER"/>
        </accounts:role>

        <accounts:role name="vaults_manager_role">
            <accounts:displayName>Vaults Manager</accounts:displayName>
            <accounts:structure name="AC_VAULTSMANAGER"/>
        </accounts:role>

        <accounts:role name="i18n_manager_role">
            <accounts:displayName>I18n Manager</accounts:displayName>
            <accounts:structure name="AC_I18NMANAGER"/>
        </accounts:role>
        <accounts:role name="workflow_manager_role">
            <accounts:displayName>Workflow Manager</accounts:displayName>
            <accounts:structure name="AC_WORKFLOWMANAGER"/>
        </accounts:role>
        <accounts:role name="mail_template_manager_role">
            <accounts:displayName>Mail Template Manager</accounts:displayName>
            <accounts:structure name="AC_MAILTEMPLATEMANAGER"/>
        </accounts:role>
        <accounts:role name="trash_manager_role">
            <accounts:displayName>Mail Template Manager</accounts:displayName>
            <accounts:structure name="AC_TRASHMANAGER"/>
        </accounts:role>
    </accounts:roles>
    <accounts:groups>

        <accounts:group name="gadmin">
            <accounts:associatedRoles>
                <accounts:associatedRole ref="system_administrator"/>
            </accounts:associatedRoles>
        </accounts:group>
    </accounts:groups>
</accounts:accounts>