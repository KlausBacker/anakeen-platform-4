<?xml version="1.0"?>
<module name="@moduleName@" disabled="no"
        license="http://docs.anakeen.com/licenses/anakeen-3.0/license.html Anakeen License Agreement v3"
        version="@version@" release="@release@" vendor="Anakeen"
        basecomponent="no">
    <description>Test case for Smart Data Engine.</description>

    <requires>
        <module name="smart-data-engine"/>
    </requires>

    <replaces>
        <module name="anakeen-core-test"/>
    </replaces>
    <pre-install>
        <check type="syscommand" command="xmllint">
            <label lang="en">Check "xmllint". To check xml files</label>
        </check>
        <check type="phpclass" class="ZipArchive">
            <help>You might need to install a php-zip package from your distribution in order to have ZipArchive support in PHP.</help>
        </check>
    </pre-install>

    <post-install>
    </post-install>

    <pre-upgrade>
        <check type="syscommand" command="xmllint">
            <label lang="en">Check "xmllint". To check xml files</label>
        </check>
        <check type="phpclass" class="ZipArchive">
            <help>You might need to install a php-zip package from your distribution in order to have ZipArchive support in PHP.</help>
        </check>
    </pre-upgrade>

    <post-upgrade>
    </post-upgrade>

</module>
