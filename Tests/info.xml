<?xml version="1.0"?>
<module name="@moduleName@" disabled="no" version="@version@" release="@release@" vendor="Anakeen"
        basecomponent="no">
    <description>Test case for Anakeen Platform Workflow.</description>
    <requires>
        <module name="smart-data-engine-test"/>
        <module name="workflow"/>
    </requires>

    <replaces>
        <module name="anakeen-workflow-test"/>
    </replaces>
    <pre-install>
        <check type="syscommand" command="xmllint">
            <label lang="en">Check "xmllint". To check xml files</label>
        </check>
        <check type="phpclass" class="ZipArchive">
            <help>You might need to install a php-zip package from your distribution in order to have ZipArchive support in PHP.</help>
        </check>
    </pre-install>

    <post-install>
        <process command="programs/update_catalog"/>
    </post-install>

    <pre-upgrade>
        <check type="syscommand" command="xmllint">
            <label lang="en">Check "xmllint". To check xml files</label>
        </check>
        <check type="phpclass" class="ZipArchive">
            <help>You might need to install a php-zip package from your distribution in order to have ZipArchive support in PHP.</help>
        </check>
    </pre-upgrade>

    <post-upgrade>
    </post-upgrade>

</module>
