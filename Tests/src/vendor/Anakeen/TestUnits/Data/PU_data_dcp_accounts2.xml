            <accounts:associatedRoles>
                <accounts:associatedRole ref="big force"/>
            </accounts:associatedRoles>
            <accounts:parentGroups>
                <accounts:parentGroup ref="levelsupervisor"/>
            </accounts:parentGroups>

        </accounts:user>
