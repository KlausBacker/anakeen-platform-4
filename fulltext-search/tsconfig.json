{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "jquery",
      "node"
    ],
    "noImplicitAny": false,
    "strictNullChecks": false,
    "sourceMap": true,
    "lib": [
      "dom",
      "esnext",
      "es6"
    ]
  },
  "include": [
    "./components/**/*.ts",
    "./components/**/*.vue"
  ],
  "files": [
    "./vue-shims.d.ts",
    "./vue-type-shims.d.ts",
    "./kendo-shims.d.ts"
  ]
}
