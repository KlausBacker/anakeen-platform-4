<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Jasmine JS</title>
    <link rel="shortcut icon" href="[[icon]]">
    [[#css]]
    <link rel="stylesheet" type="text/css" href="[[.]]"/>
    [[/css]]
    <style>
        .panel-heading {
            cursor:pointer;
        }
        .panel--hide {
            visibility:hidden;
            max-height:0;
            overflow:hidden;
        }
    </style>
</head>
<body>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title" id="displayMode"><span class="glyphicon glyphicon-plus"></span> Contenu des tests</h3>

    </div>
    <div class="panel-body panel--hide" id="render" >
        Panel content
    </div>
</div>
<script type="text/javascript">
    window.dcp = window.dcp || {};
    window.dcp.ws = [[ws]];
    window.dcp.executeTests = (function() {
        var nbTest = [[nbTest]];
        return function() {
            if (--nbTest < 1) {
                return window.executeTests();
            }
        };
    })();
    try {
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById("displayMode").addEventListener("click", function () {
                var $render=$("#render");
                if ($render.hasClass("panel--hide")) {
                    $render.removeClass("panel--hide");
                } else {
                    $render.addClass("panel--hide");
                }
            });
        });
    } catch (error) {

    }

</script>
[[#js]]
<script type="text/javascript" src="[[.]]"></script>
[[/js]]
</body>
</html>