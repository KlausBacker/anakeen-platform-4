<?xml version="1.0"?>
<sde:config xmlns:sde="https://platform.anakeen.com/4/schemas/sde/1.0">
    <sde:routes namespace="Ui:Component">
        <sde:route name="Grid:Config">
            <sde:callable>Anakeen\Components\Grid\Routes\GridConfig</sde:callable>
            <sde:method>GET</sde:method>
            <sde:pattern>/api/v2/grid/config/{collectionId}</sde:pattern>
            <sde:description>Get grid component configuration</sde:description>
            <sde:requiredAccess/>
            <sde:authenticated>true</sde:authenticated>
        </sde:route>
        <sde:route name="Grid:Columns">
            <sde:callable>Anakeen\Components\Grid\Routes\ColumnsConfig</sde:callable>
            <sde:method>GET</sde:method>
            <sde:pattern>/api/v2/grid/columns/{collectionId}</sde:pattern>
            <sde:description>Get grid columns configuration</sde:description>
            <sde:requiredAccess/>
            <sde:authenticated>true</sde:authenticated>
        </sde:route>
        <sde:route name="Grid:Content">
            <sde:callable>Anakeen\Components\Grid\Routes\GridContent</sde:callable>
            <sde:method>GET</sde:method>
            <sde:pattern>/api/v2/grid/content/{collectionId}</sde:pattern>
            <sde:description>Get grid component content</sde:description>
            <sde:requiredAccess/>
            <sde:authenticated>true</sde:authenticated>
        </sde:route>
        <sde:route name="Grid:Export">
            <sde:callable>Anakeen\Components\Grid\Routes\GridExport</sde:callable>
            <sde:method>GET</sde:method>
            <sde:method>POST</sde:method>
            <sde:pattern>/api/v2/grid/export[/{transactionId}/{collectionId}]</sde:pattern>
            <sde:description>Get grid export content file</sde:description>
            <sde:requiredAccess/>
            <sde:authenticated>true</sde:authenticated>
        </sde:route>
        <sde:route name="Grid:Controller">
            <sde:callable>Anakeen\Components\Grid\Routes\GridController</sde:callable>
            <sde:method>GET</sde:method>
            <sde:pattern>/api/v2/grid/controllers/{controllerName}/{operationId}[/{collectionId}]</sde:pattern>
            <sde:description>Get grid component controller</sde:description>
            <sde:requiredAccess/>
            <sde:authenticated>true</sde:authenticated>
        </sde:route>
    </sde:routes>
    <sde:parameters namespace="Ui">
        <sde:parameter name="SE_GRID_CONTROLLERS">
            <sde:category>Smart Element Grid</sde:category>
            <sde:description>Smart Element Grid controller parameters</sde:description>
            <sde:value>{}</sde:value>
            <sde:type>json</sde:type>
            <sde:access>readonly</sde:access>
        </sde:parameter>
    </sde:parameters>
</sde:config>