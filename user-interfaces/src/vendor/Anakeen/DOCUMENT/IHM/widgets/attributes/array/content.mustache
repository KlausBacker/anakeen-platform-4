<div class="card-body dcpArray__content dcpArray__content--open" data-attrid="{{id}}">
    <table class="dcpArray__table">
        <thead >
        <tr>
            {{#tools}}
                <th class="dcpArray__head__toolCell"><span class="dcpArray__head__label"></span></th>
            {{/tools}}
            {{#content}}
                <th class="dcpArray__head__cell dcpLabel dcpArray__head__cell--{{type}} {{#needed}}dcpAttribute--needed{{/needed}}" data-attrid="{{id}}"><span class="dcpArray__head__label">{{label}}</span></th>
            {{/content}}
        </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
    <div class="dcpArray__tools">
        {{#tools}}
        <div class="dcpArray__button dcpArray__button--add" title="[[#i18n]]ddui::Add new line[[/i18n]]">
        <button type="button" class="btn btn-default dcpArray__add" tabindex="-1">
            <span class="fa fa-plus"></span>
        </button></div>
        <div class="dcpArray__button dcpArray__button--copy" title="[[#i18n]]ddui::Duplicate selected row[[/i18n]]">
        <button disabled="disabled" type="button"
                class="btn btn-default dcpArray__copy" tabindex="-1">
            <span class="fa fa-files-o"></span>
        </button></div>
        {{/tools}}
    </div>
</div>
