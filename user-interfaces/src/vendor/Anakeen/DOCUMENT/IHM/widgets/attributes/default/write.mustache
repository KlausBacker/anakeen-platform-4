<div class="{{#hadButtons}}input-group{{/hadButtons}} margin-bottom-sm">
    {{#hasAutocomplete}}
    <span class="input-group-addon">
        <button
                {{#renderOptions.autoCompleteHtmlLabel}}title="{{renderOptions.autoCompleteHtmlLabel}}"{{/renderOptions.autoCompleteHtmlLabel}}
                class="dcpAttribute__value--autocomplete--button btn btn-xs" tabindex="-1">
            <span class="k-icon k-i-arrow-60-down"></span>
        </button>
    </span>
    {{/hasAutocomplete}}
    <input type="text" name="{{id}}" {{#viewCid}} id="{{viewCid}}" {{/viewCid}}
           {{# renderOptions.maxLength}}maxlength="{{renderOptions.maxLength}}"{{/ renderOptions.maxLength}}
           {{# renderOptions.placeHolder}}placeHolder="{{renderOptions.placeHolder}}"{{/ renderOptions.placeHolder}}
           class="{{#hadButtons}}form-control{{/hadButtons}} dcpAttribute__value dcpAttribute__value--edit"
           value="{{attributeValue.value}}"/>
    {{#hadButtons}}
    <span class="dcpAttribute__content__buttons input-group-addon">
        {{#deleteButton}}
            <button type="button" title="[[#i18n]]ddui::Delete : [[/i18n]]" tabindex="-1"
                   class="btn btn-default btn-xs dcpAttribute__content__button--delete"><span class="char-close"></span>
        </button> {{/deleteButton}}
        {{#renderOptions.buttons}}<button type="button" data-title="{{title}}" data-index="{{index}}" tabindex="-1"
                class="dcpAttribute__content__button--extra btn btn-default btn-xs {{class}}">{{{renderHtmlContent}}}</button>
        {{/renderOptions.buttons}}
    </span>
    {{/hadButtons}}
</div>