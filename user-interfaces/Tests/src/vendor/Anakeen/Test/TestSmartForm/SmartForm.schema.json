{
  "definitions": {
    "fieldSet": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string",
          "title": "The Label Schema",
          "default": "",
          "examples": ["Title"],
          "pattern": "^(.*)$"
        },
        "name": {
          "type": "string",
          "title": "The Name Schema",
          "default": "",
          "examples": ["my_title"],
          "pattern": "^[a-z_][a-z0-9_]*$"
        },
        "type": {
          "type": "string",
          "enum": ["frame", "tab", "array"],
          "title": "The Type Schema",
          "default": "",
          "examples": ["text"],
          "pattern": "^(.*)$"
        },
        "display": { "type": "string", "enum": ["write", "read", "none"] },
        "content": {
          "$id": "#/properties/structure/items/properties/content",
          "type": "array",
          "title": "The Content Schema",
          "items": {
            "anyOf": [{ "$ref": "#/definitions/fieldSet" }, { "$ref": "#/definitions/fieldItem" }]
          }
        }
      },
      "required": ["name", "type"]
    },
    "fieldItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string",
          "title": "The Label Schema",
          "default": "",
          "examples": ["Title"],
          "pattern": "^(.*)$"
        },
        "name": {
          "type": "string",
          "title": "The Name Schema",
          "default": "",
          "examples": ["my_title"],
          "pattern": "^[a-z_][a-z0-9_]*$"
        },
        "type": {
          "type": "string",
          "enum": [
            "text",
            "longtext",
            "image",
            "file",
            "enum",
            "date",
            "integer",
            "int",
            "double",
            "money",
            "password",
            "json",
            "xml",
            "time",
            "timestamp",
            "color",
            "docid",
            "htmltext",
            "account"
          ],
          "title": "The Type Schema",
          "default": "",
          "examples": ["text"],
          "pattern": "^(.*)$"
        },

        "display": { "type": "string", "enum": ["write", "read", "none"] },
        "multiple": {
          "type": "boolean",
          "title": "The Multiple Schema",
          "default": false
        },

        "needed": {
          "type": "boolean",
          "title": "If field no accept empty values",
          "default": false
        },
        "options": {
          "type": "object",
          "title": "Specifics options depends of type",
          "default": {}
        },

        "typeFormat": {
          "type": "string",
          "title": "The typeFormat Schema",
          "default": ""
        },

        "enumItems": {
          "$id": "#/properties/structure/items/properties/content/items/properties/enumItems",
          "type": "array",
          "title": "The Enumitems Schema",
          "items": {
            "$id": "#/properties/structure/items/properties/content/items/properties/enumItems/items",
            "type": "object",
            "title": "The Items Schema",
            "required": ["key", "label"],
            "properties": {
              "key": {
                "$id": "#/properties/structure/items/properties/content/items/properties/enumItems/items/properties/key",
                "type": "string",
                "title": "The Key Schema",
                "default": "",
                "examples": ["low"],
                "pattern": "^(.*)$"
              },
              "label": {
                "$id": "#/properties/structure/items/properties/content/items/properties/enumItems/items/properties/label",
                "type": "string",
                "title": "The Label Schema",
                "default": "",
                "examples": ["Faible"],
                "pattern": "^(.*)$"
              }
            }
          }
        }
      },
      "required": ["name", "type"]
    },
    "menuItem" : {
      "$id": "#/properties/menu/items",
      "type": ["object"],
      "additionalProperties": false,
      "title": "The Items Schema",
      "required": ["type"],
      "properties": {
        "beforeContent": {
          "$id": "#/properties/menu/items/properties/beforeContent",
          "type": "string",
          "title": "The Beforecontent Schema",
          "default": "",
          "examples": ["<div class=\"fa fa-superpowers\" />"],
          "pattern": "^(.*)$"
        },
        "htmlAttributes": {
          "$id": "#/properties/menu/items/properties/htmlAttributes",
          "type": "object",
          "title": "The Htmlattributes Schema",
          "required": ["class"],
          "properties": {
            "class": {
              "$id": "#/properties/menu/items/properties/htmlAttributes/properties/class",
              "type": "string",
              "title": "The Class Schema",
              "default": "",
              "examples": ["menu--left"],
              "pattern": "^(.*)$"
            }
          }
        },
        "id": {
          "$id": "#/properties/menu/items/properties/id",
          "type": "string",
          "title": "The Id Schema",
          "default": "",
          "examples": ["special"],
          "pattern": "^(.*)$"
        },
        "label": {
          "$id": "#/properties/menu/items/properties/label",
          "type": "string",
          "title": "The Label Schema",
          "default": "",
          "examples": ["Special"],
          "pattern": "^(.*)$"
        },
        "type": {
          "$id": "#/properties/menu/items/properties/type",
          "type": "string",
          "enum": ["itemMenu", "listMenu", "separatorMenu"],
          "title": "The Type Schema",
          "default": "",
          "examples": ["itemMenu"],
          "pattern": "^(.*)$"
        },
        "url": {
          "$id": "#/properties/menu/items/properties/url",
          "type": "string",
          "title": "The Url Schema",
          "default": "",
          "examples": ["#action/superpower"],
          "pattern": "^(.*)$"
        },
        "iconUrl": {
          "type": "string"
        },
        "htmlLabel": {
          "type": "string"
        },
        "tooltipHtml": {
          "title": "If tooltipLabel is an html fragment",
          "type": "boolean"
        },
        "tooltipPlacement": {
          "type": "string",
          "enum" : ["top","right","left", "bottom"]
        },
        "tooltipLabel": {
          "type": "string"
        },
        "important": {
          "type": "boolean"
        },
        "visibility": {
          "type": "string",
          "enum" : ["visible", "hidden" , "disabled"]
        },
        "target": {
          "type": "string"
        },
        "targetOptions": {
          "type": "object"
        },
        "confirmationText": {
          "type": "string"
        },
        "confirmationOptions": {
          "type": "object"
        },"content": {
          "$id": "#/properties/structure/items/properties/content",
          "type": "array",
          "title": "The Content Schema",
          "items": {"$ref": "#/definitions/menuItem"}
          }
      }
    }
  },
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [],
  "additionalProperties": false,
  "properties": {
    "title": {
      "$id": "#/properties/title",
      "type": "string",
      "title": "The Title Schema",
      "default": "",
      "examples": ["Texte sans libellé"],
      "pattern": "^(.*)$"
    },
    "type": {
      "$id": "#/properties/type",
      "type": "string",
      "title": "The Type Schema",
      "default": "",
      "examples": ["Invitation"],
      "pattern": "^(.*)$"
    },
    "icon": {
      "$id": "#/properties/icon",
      "type": "string",
      "title": "The Icon Schema",
      "default": "",
      "examples": ["/api/v2/images/assets/sizes/24x24c/se-image.png"],
      "pattern": "^(.*)$"
    },
    "structure": {
      "$id": "#/properties/structure",
      "type": "array",
      "title": "The Structure Schema",
      "items": {
        "$ref": "#/definitions/fieldSet"
      }
    },
    "menu": {
      "$id": "#/properties/menu",
      "type": "array",
      "title": "The Menu Schema",
      "additionalProperties": false,
      "items": { "$ref": "#/definitions/menuItem" }
    },
    "renderOptions": {
      "$id": "#/properties/renderOptions",
      "type": "object",
      "title": "The Renderoptions Schema",
      "required": [],
      "additionalProperties": false,
      "properties": {
        "common": {
          "$id": "#/properties/renderOptions/properties/common",
          "type": "object",
          "title": "The Common Schema",
          "required": [],
          "properties": {
            "labelPosition": {
              "$id": "#/properties/renderOptions/properties/common/properties/labelPosition",
              "type": "string",
              "title": "The Labelposition Schema",
              "default": "up",
              "enum": ["up", "left", "none", "auto"],
              "examples": ["left"],
              "pattern": "^(.*)$"
            },

            "attributeLabel": {
              "$id": "#/properties/renderOptions/properties/common/properties/attributeLabel",
              "type": "string",
              "title": "The attributeLabel Schema",
              "default": "",
              "examples": ["Hello"],
              "pattern": "^(.*)$"
            },

            "description": {
              "$id": "#/properties/renderOptions/properties/common/properties/description",
              "type": "object",
              "title": "The description Schema",
              "default": "",
              "examples": [
                {
                  "collapsed": false,
                  "htmlContent": "<p>Décrire ici votre requête</p>",
                  "htmlTitle": "<h3>Objet de la demande</h3>",
                  "position": "top"
                }
              ],
              "pattern": "^(.*)$"
            }
          }
        },
        "types": {
          "$id": "#/properties/renderOptions/properties/types",
          "type": "object",
          "title": "The Types Schema"
        },

        "fields": {
          "$id": "#/properties/renderOptions/properties/fields",
          "type": "object",
          "title": "The Types Schema",
          "required": [],
          "propertyNames": {
            "pattern": "^[a-z_][a-z0-9_]*$"
          },
          "properties": {
            "text": {
              "$id": "#/properties/renderOptions/properties/types/properties/text",
              "type": "object",
              "title": "The Text Schema",
              "required": ["labelPosition"],
              "properties": {
                "labelPosition": {
                  "$id": "#/properties/renderOptions/properties/types/properties/text/properties/labelPosition",
                  "type": "string",
                  "title": "The Labelposition Schema",
                  "default": "",
                  "examples": ["none"],
                  "pattern": "^(.*)$"
                }
              }
            }
          }
        },

        "document": {
          "$id": "#/properties/renderOptions/properties/document",
          "type": "object",
          "title": "The Types Schema",
          "required": [],
          "propertyNames": {
            "pattern": "^[a-z_][a-zA-Z0-9_]*$"
          }


        }
      }
    },
    "values": {
      "$id": "#/properties/values",
      "type": "object",
      "title": "The Values Schema",
      "required": [],
      "propertyNames": {
        "pattern": "^[a-z_][a-z0-9_]*$"
      },
      "properties": {
        "my_subtitle": {
          "$id": "#/properties/values/properties/my_subtitle",
          "type": "string",
          "title": "The My_subtitle Schema",
          "default": "",
          "examples": ["Les ours forment la famille de mammifères des ursidés (Ursidae)"],
          "pattern": "^(.*)$"
        },
        "my_title": {
          "$id": "#/properties/values/properties/my_title",
          "type": "string",
          "title": "The My_title Schema",
          "default": "",
          "examples": ["Hello world"],
          "pattern": "^(.*)$"
        }
      }
    }
  }
}
