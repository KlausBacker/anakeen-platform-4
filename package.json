{
  "name": "@anakeen/hub-components",
  "version": "1.0.0",
  "autorelease": true,
  "description": "Anakeen Hub Components",
  "main": "components/lib/hub-components.common.min.js",
  "scripts": {
    "beautify": "npx eslint ./ --fix",
    "lint": "npx eslint ./",
    "buildJs": "node --max_old_space_size=4096 ./node_modules/.bin/webpack --config webpack/index.js --progress",
    "lib:prod": "webpack --env production --config ./components/webpack/index.js --progress",
    "lib:dev": "webpack --env development --config ./components/webpack/index.js --progress",
    "lib": "npm run lib:prod && npm run lib:dev",
    "watch": "webpack --watch --env development --config ./components/webpack/index.js"
  },
  "files": [
    "/components/lib",
    "/components/README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git@gitlab.anakeen.com:Anakeen/Users/charles.bonnissent/anakeen-hub.git"
  },
  "keywords": [
    "hub",
    "station"
  ],
  "author": "Anakeen",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@anakeen/ank-components": "^1.0.2-dev20190213085409",
    "@anakeen/internal-components": "^1.0.1",
    "@anakeen/user-interfaces": "^2.0.0-dev20190219134931",
    "@progress/kendo-layout-vue-wrapper": "^2019.1.124",
    "@progress/kendo-ui": "^2019.1.213",
    "axios": "^0.18.0",
    "jquery": "^3.3.1",
    "load-css-file": "^1.0.0",
    "typescript": ">=2.1.0",
    "vue": "^2.6.6",
    "vue-class-component": "^7.0.1",
    "vue-m-loader": "^1.0.1",
    "vue-property-decorator": "^7.3.0",
    "vue-router": "^3.0.2",
    "vue-router-multi-view": "^0.1.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@anakeen/anakeen-ci": "^1.0.0",
    "@anakeen/anakeen-cli": "^1.0.9",
    "@anakeen/webpack-conf": "1.0.2",
    "@commitlint/config-conventional": "^7.5.0",
    "commitlint": "^7.5.2",
    "eslint": "^5.14.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "^1.3.1",
    "prettier": "^1.16.4",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "peerDependencies": {
    "@anakeen/user-interfaces": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npx eslint ./ && npx tslint './components/src/**/*.ts' && npx prettier --check './components/src/**/*.ts' && make lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
