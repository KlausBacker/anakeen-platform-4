    "experimentalDecorators": true,
    "strict": true,
    "target": "es5",
    "importHelpers": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "types": ["node", "jquery", "kendo-ui"],
    "strictNullChecks": false,
    "sourceMap": true,
    "lib": ["dom", "esnext", "es6"]
